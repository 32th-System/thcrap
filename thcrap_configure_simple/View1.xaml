<UserControl x:Class="thcrap_configure_simple.View1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:thcrap_configure_simple"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="logo_01.png" />
        <TextBlock Grid.Row="1" FontSize="15" TextAlignment="Center" VerticalAlignment="Center">
            Welcome to thcrap<LineBreak />
            Clic next to install a patch
        </TextBlock>
        <Button Grid.Row="2" FontSize="15" Padding="8,2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="next">Next</Button>
    </Grid>
</UserControl>
